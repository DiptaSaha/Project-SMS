@model List<SmallBussinessMS.Models.Category>

@{
    ViewBag.Title = "Category Create";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h2>Create Category</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="panel-group">
        <div class="panel panel-success">
            <div class="panel-heading">
                <div class="panel-title">Category Details</div>
            </div>
            <div class="panel-body">

                <div class="form-group row">
                    @Html.Label("Code", "Category Code *", new { @class = "control-label col-md-4" })
                    <div class="col-md-4">
                        @Html.TextBox("Code", null, new { @class = "form-control" })
                    </div>
                </div>

                @*<div class="form-group row">
                    <label></label>
                    <div class="col-md-4">
                        <p id="Status" />
                    </div>
                </div>*@

                <div class="form-group row">
                    @Html.Label("Name", "Category Name *", new { @class = "control-label col-md-4" })
                    <div class="col-md-4">
                        @Html.TextBox("CategoryName", null, new { @class = "form-control" })
                    </div>
                </div>

                <div class="col-md-4 pull-right col-md-offset-4">
                    <input type="submit" class="btn btn-success" value="Save" />
                </div>
            </div>
        </div>


    </div>

}



@if (ViewBag.SMsg != null)
{
    <p style="color: green; font-weight: bolder">@(ViewBag.SMsg)</p>
}

else if (ViewBag.FMsg != null)
{
    <p style="color: red; font-weight: bolder">@(ViewBag.FMsg)</p>
}
else if (ViewBag.DMsg != null)
{
    <p style="color: red; font-weight: bolder">@(ViewBag.DMsg)</p>
}

