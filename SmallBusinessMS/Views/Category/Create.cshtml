<div class="row">
    <div class="col-md-8 col-md-offset-2">

        <h2>Category List</h2>
        <table class="table table-bordered table-striped table-responsive">

            <tr>
                <th>Sl</th>
                <th>Code</th>
                <th>Name</th>
                <th>Action</th>
            </tr>
            @{ int i = 1; }

            @foreach (var data in Model)
            {
                <tr>
                    <td>
                        <label>@i</label>
                        @{ i++; }
                    </td>
                    <td>@data.Code</td>
                    <td>@data.CategoryName</td>
                    <td>
                        @Html.ActionLink("Update", "Update", "Category", new { id = data.Id }, null)
                        @Html.ActionLink("Delete", "Delete", "Category", new { id = data.Id }, null)
                    </td>
                </tr>
            }
        </table>




